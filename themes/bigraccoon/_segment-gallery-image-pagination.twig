<!-- Article navigation -->
<div class="pagination">
	{# Assuming the sort order is descending date, then the "next" page in the list would the next oldest page. #}
	{# We're linking to the "#menu" ID so the viewer doesn't have to scroll every time they switch pages #}
	
	<a href="{{ previous_page.url }}{% if requested_tags %}?tag={{ requested_tags_string|url_encode }}{% endif %}#menu" class="thumbnail previous{% if not previous_page.id %} disabled{% endif %}">
	<abbr title="Previous - {{ previous_page.title }}">
		<svg role="img" class="arrow" viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg"><path d="M168.49,199.51a12,12,0,0,1-17,17l-80-80a12,12,0,0,1,0-17l80-80a12,12,0,0,1,17,17L97,128Z"></path></svg>
		<img src="{{ previous_thumb }}"{% if previous_placeholder %} class="placeholder"{% endif %}>
	</abbr>
	</a>
	
	<a href="{{ current_parent.url }}?from={{ current_page.id|url_encode }}{% if requested_tags %}&tag={{ requested_tags_string|url_encode }}{% endif %}" class="up"><svg role="img" class="arrow" viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg"><path d="M216.49,168.49a12,12,0,0,1-17,0L128,97,56.49,168.49a12,12,0,0,1-17-17l80-80a12,12,0,0,1,17,0l80,80A12,12,0,0,1,216.49,168.49Z"></path></svg><span>Index</span></a>
	
	<a href="{{ next_page.url }}{% if requested_tags %}?tag={{ requested_tags_string|url_encode }}{% endif %}#menu" class="thumbnail next{% if not next_page.id %} disabled{% endif %}">
	<abbr title="Next - {{ next_page.title }}">
		<img src="{{ next_thumb }}"{% if next_placeholder %} class="placeholder"{% endif %}>
		<svg role="img" class="arrow" viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg"><path d="M184.49,136.49l-80,80a12,12,0,0,1-17-17L159,128,87.51,56.49a12,12,0,1,1,17-17l80,80A12,12,0,0,1,184.49,136.49Z"></path></svg>
	</abbr>
	</a>
	
</div>
