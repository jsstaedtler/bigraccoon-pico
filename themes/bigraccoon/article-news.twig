{# Like a regular article, but without presenting a blurb.  For news articles, the blurb is simply just the first sentence or two of the content #}
{% extends "_base.twig" %}

{% block page_body %}
	{{ include("_segment-pagination.twig") }}

	<!-- A post -->
	<section class="post">
	
		<header class="major">
			{% if meta.date %}<span class="date">{{ meta.date_formatted }}</span>{% endif %}
			{% if meta.title %}<h2>{{ meta.title }}</h2>{% endif %}
		</header>
		
		{{ content }}
					
		{{ include("_segment-comments.twig") }}

	</section>
			
	{{ include("_segment-pagination.twig") }}
{% endblock page_body %}

{% block page_content %}
	{{ include("_segment-pagination.twig") }}

	<header class="major">
		<span class="date">{{ meta.date_formatted }}</span>
		<h2>{{ meta.title }}</h2>
	</header>
	
	{{ content }}
	
	{{ include("_segment-pagination.twig") }}
{% endblock page_content %}

{% block scripts %}
	{# Add lightbox elements and script #}
	{{ include("_segment-lightbox.twig") }}
	
	{{ parent() }}
{% endblock scripts %}
