<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		
		<title>{% if meta.title %}{{ meta.title }} &#x2022; {% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}
	
		<link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
		<style>
			#wrapper > .bg { background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)), url("{{ assets_url }}/{{ meta.image }}"); }
			blockquote { display: none; }
		</style>
		
		<noscript>
			<link rel="stylesheet" href="{{ theme_url }}/css/noscript.css" type="text/css" />
			<style>
				#wrapper { background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)), url("{{ assets_url }}/{{ meta.image }}"); }
			</style>
		</noscript>
		
		<!-- This template treats blockquotes as spoilers, and allows them to be hidden or revealed by the user -->
		<script>
			function toggleSpoilers(checkbox) {
				var i;
				var spoilerboxes = document.getElementsByTagName("blockquote");
				for (i = 0; i < spoilerboxes.length; i++) {
					if (checkbox.checked == true) { spoilerboxes[i].style.display = "block"; }
					else { spoilerboxes[i].style.display = "none"; }
				}
			}
		</script>
	</head>
	
	<!-- body class="is-preload" -->
	<body class="is-preload">

		<!-- Wrapper -->
		<div id="wrapper" class="fade-in">

			<!-- Page header -->
			<header id="header">
				<a href="{{ base_url }}"><img src="{{ assets_url }}/bigraccoon_logo_white.png" alt="bigraccoon.ca logo" id="headerlogo"></a>
			</header>

{{ include("segment-navbar.twig") }}

			<!-- Main content -->
			<div id="main">
			    
{{ include("segment-announcement.twig") }}

{{ include("segment-pagination.twig") }}

				<!-- Post -->
				<section class="post">

					<header class="major">
						<span class="date">{{ meta.date_formatted }}</span>
						<h2>{{ meta.title }}</h2>
							
						{% if meta.byline %}<p>{{ meta.byline }}</p>{% endif %}
					</header>
					
					{{ content }}
							
				</section>
				
				{# Huge hack job to let the spoiler checkbox instructions only appear if JavaScript is enabled in the browser. #}
				{# There is an empty div in the content file with id="spoilerToggleSection" and it will get filled in at this point. #}
				<script>
					document.getElementById("spoilerToggleSection").innerHTML = '<p><em>Additionally</em>, I&#39;ve added a few new entries which contain spoilers for <em>the entirety of <strong>Xenoblade Chronicles 3</strong></em> (including DLC expansion <strong>Future Redeemed</strong>).  <em>But those will be hidden by default.</em>  Click here if you would like to view those as well:</p><input id="spoilerswitchbox" type="checkbox" name="spoilerswitchbox" onChange="toggleSpoilers(this);"><label id="spoilerswitchlabel" for="spoilerswitchbox"><h4>Reveal full-game spoilers</h4></label>';
					toggleSpoilers(document.getElementById("spoilerswitchbox"));
				</script>
				
{{ include("segment-pagination.twig") }}

			</div>

{{ include("segment-copyright.twig") }}

		</div>

		<!-- Scripts -->
		<script src="{{ theme_url }}/js/jquery.min.js"></script>
		<script src="{{ theme_url }}/js/jquery.scrollex.min.js"></script>
		<script src="{{ theme_url }}/js/jquery.scrolly.min.js"></script>
		<script src="{{ theme_url }}/js/browser.min.js"></script>
		<script src="{{ theme_url }}/js/breakpoints.min.js"></script>
		<script src="{{ theme_url }}/js/util.js"></script>
		<script src="{{ theme_url }}/js/main.js"></script>
		<script src="{{ theme_url }}/js/bigraccoon.js"></script>

	</body>
</html>
