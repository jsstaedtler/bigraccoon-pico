<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		
		<title>{% if meta.title %}{{ meta.title }} &#x2022; {% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}
	
		<link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
		<style>
			#wrapper > .bg { background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)), url("{{ assets_url }}/{{ meta.image }}"); }
			/* #nav.sticky { background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), linear-gradient(0deg, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url("{{ assets_url }}/{{ meta.image }}"); } */
			blockquote { display: none; }
		</style>
		
		<noscript>
			<link rel="stylesheet" href="{{ theme_url }}/css/noscript.css" type="text/css" />
			<style>
				#wrapper { background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)), url("{{ assets_url }}/{{ meta.image }}"); }
			</style>
		</noscript>
		
		<!-- This template treats blockquotes as spoilers, and allows them to hidden or revealed by the user -->
		
		<script>
			function toggleSpoilers(checkbox) {
				var i;
				var spoilerboxes = document.getElementsByTagName("blockquote");
				for (i = 0; i < spoilerboxes.length; i++) {
					if (checkbox.checked == true) { spoilerboxes[i].style.display = "block"; }
					else { spoilerboxes[i].style.display = "none"; }
				}
			}
		</script>
	</head>
	
	<!-- body class="is-preload" -->
	<body class="is-preload">

		<!-- Wrapper -->
		<div id="wrapper" class="fade-in">

			<!-- Page header -->
			<header id="header">
				<a href="{{ base_url }}"><img src="{{ assets_url }}/bigraccoon_logo_white.png" alt="bigraccoon.ca logo" id="headerlogo"></a>
			</header>

			<!-- Site navigation -->
			<nav id="nav">
				<div id="homebutton" class="hidden">
					<a href="{{ base_url }}" class="home"><img src="{{ assets_url }}/bigraccoon_logo_white.png" alt="Home"></a>
				</div>
						
				<div id="menu">
				
					<div id="menubutton">
						<span id="navPanelToggle" onClick="toggleMenu();">Menu</span>
					</div>
				
					<div id="navLinks">
						<ul class="links">
						{% for page in pages(depthOffset=0) if page.title and not page.hidden %}
							{% set page_parent = page.id | split('/') %}
							<li{% if (page.id == current_page.id) or (page_parent[0] == current_parent[0]) %} class="active"{% endif %}>
								<a href="{{ page.url }}">{{ page.title }}</a>
							</li>
						{% endfor %}
						</ul>

						<ul class="icons">
							<li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
							<li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
							<li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
							<li><a href="#" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
						</ul>
					</div>
					
				</div>
			</nav>
			
			<div id="navBuffer"></div>
				
			<!-- Main content -->
			<div id="main">
			    
			{# Find out what our parent page is, so that we don't jump to it with a Prev/Next page button #}
				{% set current_parent = NULL %}
				{% set next_page = NULL %}
				{% set previous_page = NULL %}
				
				{% set parents_array = pages(current_page.id, offset=-1) %}
				{% for parent_obj in parents_array %}
					{% set current_parent = parent_obj %}
				{% endfor %}
				
			{# Get all child pages of that parent (the siblings of this page) #}
				{% set siblingid_array = pages(current_parent.id)|keys %}
				
            {# Find the current page within that list, and when we do, save the previous and next pages #}
                {% for siblingid in siblingid_array %}
					{% if siblingid == current_page.id %}
						{% set previous_page = pages[siblingid_array[loop.index0-1]] %}
						{% set next_page = pages[siblingid_array[loop.index0+1]] %}
					{% endif %}
				{% endfor %}
                

				<!-- Article navigation -->
				<div class="pagination">
                    {# We're swapping Prev and Next here, so that Next goes to the newer article (assuming articles are sorted by descending date) #}
					{% if next_page.id %}<a href="{{ next_page.url }}" class="previous"><span class="abbrev">Prev</span> <span class="title">{{ next_page.title }}</span></a>{% endif %}
					<a href="{{ current_parent.url }}" class="up">Index</a>
					{% if previous_page.id %}<a href="{{ previous_page.url }}" class="next"><span class="abbrev">Next</span> <span class="title">{{ previous_page.title }}</span></a>{% endif %}
				</div>

				<!-- Post -->
				<section class="post">

					<header class="major">
						<span class="date">{{ meta.date }}</span>
						<h2>{{ meta.title }}</h2>
							
						{% if meta.byline %}<p>{{ meta.byline }}</p>{% endif %}
					</header>
					
					{{ content }}
							
				</section>
				
				<!-- Article navigation -->
				<div class="pagination">
                    {# We're swapping Prev and Next here, so that Next goes to the newer article (assuming articles are sorted by descending date) #}
					{% if next_page.id %}<a href="{{ next_page.url }}" class="previous"><span class="abbrev">Prev</span> <span class="title">{{ next_page.title }}</span></a>{% endif %}
					<a href="{{ current_parent.url }}" class="up">Index</a>
					{% if previous_page.id %}<a href="{{ previous_page.url }}" class="next"><span class="abbrev">Next</span> <span class="title">{{ previous_page.title }}</span></a>{% endif %}
				</div>

			</div>

			<!-- Footer -->
			<footer id="footer">
			</footer>

			<!-- Copyright -->
			<div id="copyright">
				<ul>
					<li>&copy; Untitled</li>
					<li>Design: <a href="https://html5up.net">HTML5 UP</a></li>
				</ul>
			</div>

		</div>

		<!-- Scripts -->
		<script src="{{ theme_url }}/js/jquery.min.js"></script>
		<script src="{{ theme_url }}/js/jquery.scrollex.min.js"></script>
		<script src="{{ theme_url }}/js/jquery.scrolly.min.js"></script>
		<script src="{{ theme_url }}/js/browser.min.js"></script>
		<script src="{{ theme_url }}/js/breakpoints.min.js"></script>
		<script src="{{ theme_url }}/js/util.js"></script>
		<script src="{{ theme_url }}/js/main.js"></script>
		<script src="{{ theme_url }}/js/bigraccoon.js"></script>

	</body>
</html>
