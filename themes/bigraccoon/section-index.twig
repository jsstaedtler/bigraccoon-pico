<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		
		<title>{% if meta.title %}{{ meta.title }} &#x2022; {% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}
	
		<link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
		<style>
			#wrapper > .bg { background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)), url("{{ assets_url }}/{{ meta.image }}"); }
			/* #nav.sticky { background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), linear-gradient(0deg, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url("{{ assets_url }}/{{ meta.image }}"); } */
		</style>

		<noscript>
			<link rel="stylesheet" href="{{ theme_url }}/css/noscript.css" type="text/css" />
			<style>
				#wrapper { background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)), url("{{ assets_url }}/{{ meta.image }}"); }
			</style>
		</noscript>
	</head>
	
	<body class="is-preload">

		<!-- Wrapper -->
		<div id="wrapper" class="fade-in">

			<!-- Page header -->
			<header id="header">
				<a href="{{ base_url }}"><img src="{{ assets_url }}/bigraccoon_logo_white.png" alt="bigraccoon.ca logo" id="headerlogo"></a>
			</header>

			<!-- Site navigation -->
			<nav id="nav">
				<div id="homebutton" class="hidden">
					<a href="{{ base_url }}" class="home"><img src="{{ assets_url }}/bigraccoon_logo_white.png" alt="Home"></a>
				</div>
				
				<div id="menu">
				
					<div id="menubutton">
						<span id="navPanelToggle" onClick="toggleMenu();">Menu</span>
					</div>
				
					<div id="navLinks">
						<ul class="links">
						{% for page in pages(depthOffset=0) if page.title and not page.hidden %}
							{% set page_parent = page.id | split('/') %}
							<li{% if (page.id == current_page.id) or (page_parent[0] == current_parent[0]) %} class="active"{% endif %}>
								<a href="{{ page.url }}">{{ page.title }}</a>
							</li>
						{% endfor %}
						</ul>

						<ul class="icons">
							<li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
							<li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
							<li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
							<li><a href="#" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
						</ul>
					</div>
				
				</div>
			</nav>
			
			<div id="navBuffer"></div>

			<!-- Main -->
			<div id="main">

				<!-- Post -->
				<section class="post">
					
					{% if meta.title %}
					<header class="major">
						<h1>{{ meta.title }}</h1>
					</header>
					{% endif %}
					
					{{ content }}
					
					{% for page in pages(current_page.id) if not page.hidden %}
					<ul class="pageslist">
						<li>
							<a href="{{ page.url }}">
								<p class="date">{{ page.date_formatted }}</p>
								{% if page.meta.image %}<span class="image right"><img src="{{ assets_url }}/{{ page.meta.image }}"></span>{% endif %}
								<h3>{{ page.title }}</h3>
								<p class="excerpt">{{ page.meta.byline }}</p>
							</a>
						</li>
					</ul>
					{% endfor %}

				</section>

			</div>

			<!-- Footer -->
			<footer id="footer">
			</footer>

			<!-- Copyright -->
			<div id="copyright">
				<ul>
					<li>&copy; Untitled</li>
					<li>Design: <a href="https://html5up.net">HTML5 UP</a></li>
				</ul>
			</div>

		</div>

		<!-- Scripts -->
		<script src="{{ theme_url }}/js/jquery.min.js"></script>
		<script src="{{ theme_url }}/js/jquery.scrollex.min.js"></script>
		<script src="{{ theme_url }}/js/jquery.scrolly.min.js"></script>
		<script src="{{ theme_url }}/js/browser.min.js"></script>
		<script src="{{ theme_url }}/js/breakpoints.min.js"></script>
		<script src="{{ theme_url }}/js/util.js"></script>
		<script src="{{ theme_url }}/js/main.js"></script>
		<script src="{{ theme_url }}/js/bigraccoon.js"></script>

	</body>
</html>
